---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: test-pv
spec:
  accessModes:
    - ReadWritenOnce
  capacity:
    storage: 5Gi
  csi:
    driver: ebs.csi.aws.com
    fsType: ext4
    volumeHandle: vol-0dff87c6fefe42bd9
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpreessions:
            - key: topology.ebs.csi.aws.com/zone
              operator: In
              values:
                - us-east-1

~                                                                                                            
